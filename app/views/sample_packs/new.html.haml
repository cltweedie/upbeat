%main.container
  - if current_producer && current_producer.type == "Seller"
    %h1 Upload a sample pack

    = form_for @pack do |f|
      .form-group
        = f.label :title
        = f.text_field :title, class: "form-control"

      .form-group
        = f.label :file
        = f.file_field :file

      .form-group
        = f.label :cover_image
        = f.file_field :cover_image

      .form-group
        = f.label :price
        = f.text_field :price, class: "form-control"

      .form-group
        = f.label :description
        = f.text_area :description, class: "form-control"

      .form-group
        = f.submit "Add sample pack", class: "btn btn-primary"
